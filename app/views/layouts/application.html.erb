<!DOCTYPE html>
<html>
  <head>
    <title>Pet Names</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <nav>
      <ul class="alpha-menu">
        <% ('A'..'Z').to_a.each do |letter| %>
          <li><a href="/names/alphabetical/<%= letter %>"> <%= letter %></a></li>
        <% end %>
      </ul>
    </nav>

    <%= yield %>

  </body>
</html>
